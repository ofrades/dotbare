#---------- Keybindings for bspwm ----------#

super + shift + s
	sh ~/.config/rofi/bin/sxhkd

# App Launcher
super + d
	sh ~/.config/rofi/bin/launcher_text

# Explorer
super + f
	nautilus

# Browser
super + b
	chromium

# Terminal kitty
super + Return
	kitty

# Powermenu
super + x
	sh ~/.config/rofi/bin/powermenu

# Network manager
super + n
	networkmanager_dmenu

# Neovim
super + e
	kitty -e nvim

# Ranger
super + r
	kitty -e ranger

# Toggle keyboard language
super + p
	sh ~/.config/bspwm/keyboard.sh

# Take screenshot
super + s
	exec flameshot gui

# Tmux sessions
super + t
	sh ~/.config/rofi/tmux_session.sh

# Switch windows
alt + {_,shift + }Tab
	sh ~/.config/rofi/window_switcher.sh

# Close App
super + q
	bspc node -c

# Clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu \
        -location 1 \
        -m -3 \
        -no-show-icons \
        -theme-str '* \{ font: 10px; \}' \
        -theme-str 'listview \{ spacing: 0; \}' \
        -theme-str 'window \{ width: 20em; \}'

# Toggle fullscreen or monocle
super + m
	bspc desktop -l next

# Send the window to another edge of the screen
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Resize tiled windows
super + alt + {h,j,k,l}
	sh ~/.config/bspwm/bspwm_resize.sh {west,south,north,east} 20

# Move floating windows
alt + shift + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/Restart bspwm
ctrl + alt + {q,r}
	bspc {quit,wm -r}

# Toggle beetwen floating & tiled
super + space
	bspc node -t "~"{floating,tiled}

