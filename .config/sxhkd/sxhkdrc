e#---------- Keybindings for bspwm ----------##

# Terminal (termite)
super + Return
	kitty

super + {_,shift +}Return
{kitty, bspc rule -a \* -o state=floating && kitty}

super + e
	kitty -e nvim

super + r
	kitty -e ranger

super + p
	sh ~/.config/bspwm/keyboard.sh

# Rofi App Launcher
super + d
	sh ~/.config/rofi/bin/launcher_text

super + n
	networkmanager_dmenu

super + x
	sh ~/.config/rofi/bin/powermenu

super + s
	exec flameshot gui

##---------- Applications ----------##

super + f
	nautilus

super + t
	sh ~/.config/rofi/tmux_session.sh

super + b
	chromium

alt + {_,shift + }Tab
	sh ~/.config/rofi/window_switcher.sh

##---------- Bspwm ----------##

# Close App
super + q
	bspc node -c

# Fullscreen or Monocle
super + m
	bspc desktop -l next
	
# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Send the window to another edge of the screen
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Resize tiled windows
# You can do: super + right mouse click + drag
super + alt + {h,j,k,l}
	sh ~/.config/bspwm/bspwm_resize.sh {west,south,north,east} 20

## Move floating windows
alt + shift + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/Restart bspwm
ctrl + alt + {q,r}
	bspc {quit,wm -r}

