/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @ac;
    font:				 	"OperatorMono 10";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					0;
    border-radius:                  10px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
