#!/bin/sh

rofi -combin-modi window, drun -show combi -modi combi -anchor center -location center -width 50%\
                 -lines 8 -line-margin 5 -line-padding 5 \
                 -layout vertical -dynamic true -cycle true \
                 -disable-history false \
                 -separator-style - -font "OperatorMono 10" -columns 1 \
                 -color-window "#1d2a39, #1d2a39, #4ca585" \
                 -color-normal "#1d2a39, #d9c679, #1d2a39, #6173d1, #d9c679" \
                 -color-active "#1d2139, #4ca585, #1d2a39, #007763, #d9c679" \
                 -color-urgent "#1d2139, #4ca585, #1d2a39, #cf7357, #d9c679" \
